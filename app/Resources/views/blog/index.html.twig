{% extends 'blog/layout.html.twig' %}
{% set title = 'title.mainPage'|trans %}
{% block content %}
    {% for post in posts %}
        <div class="well">
            <a href="{{ path('show_post_page', { id: post.id }) }}">
                {{ post.summary }}
            </a>
        </div>
    {% endfor %}
{% endblock %}
