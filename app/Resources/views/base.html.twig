<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{{ title }}{% endblock %}</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
        <script src="//ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
        {% block stylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div id="wrapper">
    <header>
        <nav class="navbar navbar-inverse" role="navigation">
            <div class="container-fluid">
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-left">
                        <li>
                            <a href="{{ path('home_page') }}">
                                {{ 'href.mainPage.text'|trans }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('create_post_page') }}">
                                {{ 'href.newPost.text'|trans }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('utility_home') }}">
                                {{ 'href.utility.text'|trans}}
                            </a>
                        </li>
                    </ul>
                    {% if is_granted("ROLE_USER") %}
                    <ul class="nav navbar-nav navbar-right" style="color: white;">
                        <li>
                            <a href="{{ path('fos_user_security_logout') }}">
                                <img width="18px" src="{{ asset('exit.jpg') }}" alt="{{ 'logout' |trans }}">
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('office_home', {id: app.user.id}) }}">{{ app.user.username }}</a>
                        </li>
                    </ul>
                    {% else %}
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="{{ path('fos_user_security_login') }}">
                                    <img width="20px" src="{{ asset('znak.jpg') }}" alt="{{ 'login_title' |trans }}">
                                </a>
                            </li>
                        </ul>
                    {% endif %}
                </div>
            </div>
        </nav>
    </header>
    <div id="content">
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </div>
    <footer></footer>
    </div>
    </body>
</html>
